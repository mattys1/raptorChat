FROM golang:1.24 AS builder

WORKDIR /app
COPY . .
RUN go mod download
RUN go mod tidy
RUN CGO_ENABLED=0 GOOS=linux go build -tags debug -o backend . 
# RUN CGO_ENABLED=0 GOOS=linux go build -o backend . 

# Runtime stage
FROM alpine:latest

WORKDIR /app
COPY --from=builder /app/backend .
EXPOSE 8080
CMD ["./backend"]
